<Window x:Class="Cookie_Clicker_Murat_Varen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cookie_Clicker_Murat_Varen"
        mc:Ignorable="d" 
        Title="Cookie Clicker" Height="450" Width="800">
    <!-- Achtergrond Image -->
    <Window.Background>
        <ImageBrush ImageSource="Assets/Images/background.jpg" Stretch="Fill"/>
    </Window.Background>
  
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            
        <!-- COL 0 -->
        <StackPanel VerticalAlignment="Center">
            <Label Name="LblCookieCount" Content="Cookie" HorizontalAlignment="Center" FontSize="24"/>
            <Image Name="ImgCookie" Source="Assets/Images/Cookie.png"  Margin="10" MouseDown="ImgCookie_MouseDown">
                <Image.Effect>
                    <DropShadowEffect/>
                </Image.Effect>
            </Image>
        </StackPanel>
            
    </Grid>
</Window>
